---
import { siteConfig } from '../config/site.config';
import { languages, defaultLang } from '../config/i18n';

const navItems = [
  { labelEs: 'Servicios', labelCa: 'Serveis', href: '#servicios' },
  { labelEs: 'Equipo', labelCa: 'Equip', href: '#equipo' },
  { labelEs: 'Trabajos', labelCa: 'Treballs', href: '#trabajos' },
  { labelEs: 'Reseñas', labelCa: 'Ressenyes', href: '#resenas' },
  { labelEs: 'Horario', labelCa: 'Horari', href: '#horario' },
  { labelEs: 'Contacto', labelCa: 'Contacte', href: '#contacto' },
];
---

<header 
  id="main-header" 
  class="fixed top-0 left-0 right-0 z-40 transition-all duration-300"
>
  <div class="absolute inset-0 bg-brand-black/80 backdrop-blur-md border-b border-brand-white/5"></div>
  
  <nav class="container-custom relative">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a 
        href="#" 
        class="flex items-center gap-3 group"
        aria-label={siteConfig.name}
      >
        <img 
          src={siteConfig.images.logo.footer}
          alt={siteConfig.name}
          class="h-10 w-auto object-contain transition-transform duration-300 group-hover:scale-105"
          loading="eager"
        />
        <span class="hidden sm:block font-display text-lg font-bold uppercase tracking-wider text-brand-white">
          {siteConfig.name}
        </span>
      </a>
      
      <!-- Nav Desktop -->
      <ul class="hidden lg:flex items-center gap-8">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class="nav-link relative font-body text-sm uppercase tracking-wider text-brand-white/70 
                     hover:text-brand-white transition-colors duration-300
                     after:absolute after:left-0 after:bottom-0 after:w-0 after:h-px 
                     after:bg-brand-accent after:transition-all after:duration-300
                     hover:after:w-full"
              data-label-es={item.labelEs}
              data-label-ca={item.labelCa}
            >
              {item.labelEs}
            </a>
          </li>
        ))}
      </ul>
      
      <!-- CTA Desktop + Language Selector + Hamburger Mobile -->
      <div class="flex items-center gap-3">
        <!-- Language Selector -->
        <div class="relative">
          <button 
            id="lang-toggle"
            class="flex items-center gap-1.5 px-2 py-1 text-sm font-body uppercase tracking-wider 
                   text-brand-white/70 hover:text-brand-white transition-colors duration-300
                   border border-brand-white/20 rounded hover:border-brand-accent/50"
            aria-label="Cambiar idioma"
          >
            <span id="current-lang">ES</span>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <div 
            id="lang-dropdown"
            class="absolute right-0 top-full mt-2 bg-brand-gray border border-brand-white/10 rounded shadow-xl 
                   opacity-0 invisible translate-y-2 transition-all duration-200 z-50"
          >
            <button 
              data-lang="es"
              class="lang-option block w-full px-4 py-2 text-left text-sm text-brand-white/70 
                     hover:text-brand-white hover:bg-brand-white/5 transition-colors"
            >
              Español
            </button>
            <button 
              data-lang="ca"
              class="lang-option block w-full px-4 py-2 text-left text-sm text-brand-white/70 
                     hover:text-brand-white hover:bg-brand-white/5 transition-colors"
            >
              Català
            </button>
          </div>
        </div>
        
        <button 
          class="hidden md:inline-flex btn-primary text-sm py-2 px-4"
          data-open-booking
          aria-label="Reservar cita"
          data-text-es="Reservar"
          data-text-ca="Reservar"
        >
          <span class="translatable" data-es="Reservar" data-ca="Reservar">Reservar</span>
        </button>
        
        <!-- Hamburger Menu -->
        <button 
          id="mobile-menu-btn"
          class="lg:hidden flex flex-col justify-center items-center w-10 h-10 gap-1.5 group"
          aria-label="Abrir menú"
          aria-expanded="false"
        >
          <span class="block w-6 h-0.5 bg-brand-white transition-all duration-300 group-[.open]:rotate-45 group-[.open]:translate-y-2"></span>
          <span class="block w-6 h-0.5 bg-brand-white transition-all duration-300 group-[.open]:opacity-0"></span>
          <span class="block w-6 h-0.5 bg-brand-white transition-all duration-300 group-[.open]:-rotate-45 group-[.open]:-translate-y-2"></span>
        </button>
      </div>
    </div>
  </nav>
  
  <!-- Mobile Menu -->
  <div 
    id="mobile-menu"
    class="lg:hidden fixed inset-0 top-16 bg-brand-black/95 backdrop-blur-lg z-30 
           translate-x-full transition-transform duration-300 ease-out"
    aria-hidden="true"
  >
    <nav class="container-custom py-8">
      <ul class="flex flex-col gap-6">
        {navItems.map((item, index) => (
          <li style={`--delay: ${index * 0.05}s`}>
            <a 
              href={item.href}
              class="mobile-nav-link nav-link block font-display text-2xl uppercase tracking-wider text-brand-white/80 
                     hover:text-brand-accent transition-colors duration-300
                     py-2 border-b border-brand-white/10"
              data-label-es={item.labelEs}
              data-label-ca={item.labelCa}
            >
              {item.labelEs}
            </a>
          </li>
        ))}
      </ul>
      
      <div class="mt-8 pt-8 border-t border-brand-white/10">
        <button 
          class="btn-primary w-full text-lg"
          data-open-booking
        >
          <span class="translatable" data-es="Reservar cita" data-ca="Reservar cita">Reservar cita</span>
        </button>
      </div>
    </nav>
  </div>
</header>

<style>
  #main-header.scrolled {
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  }
  
  #main-header.scrolled .container-custom > div {
    height: 3.5rem;
  }
  
  #mobile-menu.open {
    transform: translateX(0);
  }
</style>

<script>
  // Language switcher
  const langToggle = document.getElementById('lang-toggle');
  const langDropdown = document.getElementById('lang-dropdown');
  const currentLangSpan = document.getElementById('current-lang');
  const langOptions = document.querySelectorAll('.lang-option');
  
  // Get stored language or default
  function getStoredLanguage(): 'es' | 'ca' {
    const stored = localStorage.getItem('language') as 'es' | 'ca';
    return (stored === 'es' || stored === 'ca') ? stored : 'es';
  }
  
  // Update all translatable elements
  function updateLanguage(lang: 'es' | 'ca') {
    localStorage.setItem('language', lang);
    document.documentElement.lang = lang === 'es' ? 'es-ES' : 'ca';
    
    // Update current lang display
    if (currentLangSpan) {
      currentLangSpan.textContent = lang.toUpperCase();
    }
    
    // Update nav links
    document.querySelectorAll('.nav-link').forEach(link => {
      const labelEs = link.getAttribute('data-label-es');
      const labelCa = link.getAttribute('data-label-ca');
      if (labelEs && labelCa) {
        link.textContent = lang === 'es' ? labelEs : labelCa;
      }
    });
    
    // Update all translatable elements
    document.querySelectorAll('.translatable').forEach(el => {
      const textEs = el.getAttribute('data-es');
      const textCa = el.getAttribute('data-ca');
      if (textEs && textCa) {
        el.textContent = lang === 'es' ? textEs : textCa;
      }
    });
    
    // Dispatch custom event for other components
    window.dispatchEvent(new CustomEvent('languageChange', { detail: { lang } }));
  }
  
  // Toggle dropdown
  langToggle?.addEventListener('click', (e) => {
    e.stopPropagation();
    const isVisible = !langDropdown?.classList.contains('invisible');
    
    if (isVisible) {
      langDropdown?.classList.add('opacity-0', 'invisible', 'translate-y-2');
    } else {
      langDropdown?.classList.remove('opacity-0', 'invisible', 'translate-y-2');
    }
  });
  
  // Language option click
  langOptions.forEach(option => {
    option.addEventListener('click', () => {
      const lang = option.getAttribute('data-lang') as 'es' | 'ca';
      if (lang) {
        updateLanguage(lang);
        langDropdown?.classList.add('opacity-0', 'invisible', 'translate-y-2');
      }
    });
  });
  
  // Close dropdown on outside click
  document.addEventListener('click', () => {
    langDropdown?.classList.add('opacity-0', 'invisible', 'translate-y-2');
  });
  
  // Initialize language on load
  const initialLang = getStoredLanguage();
  updateLanguage(initialLang);

  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  
  function toggleMenu() {
    const isOpen = mobileMenu?.classList.contains('open');
    
    menuBtn?.classList.toggle('open');
    mobileMenu?.classList.toggle('open');
    mobileMenu?.setAttribute('aria-hidden', isOpen ? 'true' : 'false');
    menuBtn?.setAttribute('aria-expanded', isOpen ? 'false' : 'true');
    
    // Prevenir scroll del body
    document.body.style.overflow = isOpen ? '' : 'hidden';
  }
  
  menuBtn?.addEventListener('click', toggleMenu);
  
  // Cerrar menú al hacer click en un link
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      if (mobileMenu?.classList.contains('open')) {
        toggleMenu();
      }
    });
  });
</script>
