---
import { siteConfig } from '../config/site.config';
---

<!-- Botón flotante de reserva -->
<div 
  id="floating-cta"
  class="fixed bottom-6 right-6 z-40 opacity-0 translate-y-4 transition-all duration-500
         safe-bottom"
>
  <button 
    id="floating-btn"
    class="group relative flex items-center justify-center w-14 h-14 md:w-auto md:h-auto md:px-6 md:py-4
           bg-brand-accent text-brand-white rounded-full md:rounded-sm
           shadow-lg shadow-brand-accent/30
           transition-all duration-300
           hover:bg-brand-accent-light hover:shadow-brand-accent/50
           focus:outline-none focus:ring-2 focus:ring-brand-accent focus:ring-offset-2 focus:ring-offset-brand-black
           animate-pulse-slow hover:animate-none"
    data-open-booking
    aria-label="Reservar cita"
  >
    <!-- Icono móvil -->
    <svg class="w-6 h-6 md:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>
    
    <!-- Texto desktop -->
    <span class="hidden md:flex items-center gap-2 font-display uppercase tracking-wider text-sm">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <span class="translatable" data-es="Reservar" data-ca="Reservar">Reservar</span>
    </span>
    
    <!-- Glow effect -->
    <div class="absolute inset-0 rounded-full md:rounded-sm bg-brand-accent blur-lg opacity-30 
                group-hover:opacity-50 transition-opacity"></div>
  </button>
</div>

<!-- Modal de reserva -->
<div 
  id="booking-modal"
  class="fixed inset-0 z-50 hidden"
  role="dialog"
  aria-modal="true"
  aria-labelledby="booking-title"
>
  <!-- Backdrop -->
  <div 
    id="booking-backdrop"
    class="absolute inset-0 bg-brand-black/90 backdrop-blur-sm opacity-0 transition-opacity duration-300"
  ></div>
  
  <!-- Modal content (bottom sheet en móvil, centered en desktop) -->
  <div 
    id="booking-content"
    class="absolute bottom-0 left-0 right-0 md:bottom-auto md:left-1/2 md:top-1/2 
           md:-translate-x-1/2 md:-translate-y-1/2
           bg-brand-dark border-t md:border border-brand-white/10 rounded-t-2xl md:rounded-sm
           max-w-md w-full max-h-[85vh] md:max-h-none overflow-hidden
           transform translate-y-full md:translate-y-0 md:scale-95 md:opacity-0
           transition-all duration-300 safe-bottom"
  >
    <!-- Handle para móvil -->
    <div class="md:hidden flex justify-center py-3">
      <div class="w-10 h-1 bg-brand-white/20 rounded-full"></div>
    </div>
    
    <!-- Header -->
    <div class="px-6 pb-4 md:pt-6 flex items-center justify-between">
      <div>
        <h2 id="booking-title" class="font-display text-xl uppercase tracking-wide text-brand-white">
          Reservar Cita
        </h2>
        <p class="text-brand-white/60 text-sm mt-1">
          Elige cómo contactarnos
        </p>
      </div>
      
      <button 
        id="booking-close"
        class="w-10 h-10 flex items-center justify-center text-brand-white/60 hover:text-brand-white transition-colors"
        aria-label="Cerrar"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <!-- Options -->
    <div class="px-6 pb-6 space-y-3">
      <!-- Llamar -->
      <a 
        href={`tel:${siteConfig.contact.phoneTel}`}
        class="booking-option flex items-center gap-4 p-4 bg-brand-gray rounded-sm
               border border-brand-white/10 hover:border-brand-accent/50
               transition-all duration-300 group"
      >
        <div class="w-12 h-12 flex items-center justify-center bg-brand-accent/10 rounded-full
                    group-hover:bg-brand-accent/20 transition-colors">
          <svg class="w-6 h-6 text-brand-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
        </div>
        <div class="flex-1">
          <span class="block font-display uppercase tracking-wide text-brand-white">
            Llamar
          </span>
          <span class="text-sm text-brand-white/60">
            {siteConfig.contact.phone}
          </span>
        </div>
        <svg class="w-5 h-5 text-brand-white/40 group-hover:text-brand-accent transition-colors" 
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
      
      <!-- WhatsApp -->
      <a 
        href={`https://wa.me/${siteConfig.contact.phoneClean}`}
        target="_blank"
        rel="noopener noreferrer"
        class="booking-option flex items-center gap-4 p-4 bg-brand-gray rounded-sm
               border border-brand-white/10 hover:border-[#25D366]/50
               transition-all duration-300 group"
      >
        <div class="w-12 h-12 flex items-center justify-center bg-[#25D366]/10 rounded-full
                    group-hover:bg-[#25D366]/20 transition-colors">
          <svg class="w-6 h-6 text-[#25D366]" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
        </div>
        <div class="flex-1">
          <span class="block font-display uppercase tracking-wide text-brand-white">
            WhatsApp
          </span>
          <span class="text-sm text-brand-white/60">
            Envía un mensaje
          </span>
        </div>
        <svg class="w-5 h-5 text-brand-white/40 group-hover:text-[#25D366] transition-colors" 
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
      
      <!-- Instagram -->
      <a 
        href={siteConfig.social.instagram}
        target="_blank"
        rel="noopener noreferrer"
        class="booking-option flex items-center gap-4 p-4 bg-brand-gray rounded-sm
               border border-brand-white/10 hover:border-brand-accent-light/50
               transition-all duration-300 group"
      >
        <div class="w-12 h-12 flex items-center justify-center bg-gradient-to-br from-brand-accent/10 to-brand-accent-light/10 rounded-full
                    group-hover:from-brand-accent/20 group-hover:to-brand-accent-light/20 transition-colors">
          <svg class="w-6 h-6 text-brand-accent-light" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </div>
        <div class="flex-1">
          <span class="block font-display uppercase tracking-wide text-brand-white">
            Instagram
          </span>
          <span class="text-sm text-brand-white/60">
            {siteConfig.social.instagramHandle}
          </span>
        </div>
        <svg class="w-5 h-5 text-brand-white/40 group-hover:text-brand-accent-light transition-colors" 
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
      
      <!-- Ver precios -->
      <a 
        href="#servicios"
        id="booking-prices"
        class="booking-option flex items-center gap-4 p-4 bg-brand-gray rounded-sm
               border border-brand-white/10 hover:border-brand-white/30
               transition-all duration-300 group"
      >
        <div class="w-12 h-12 flex items-center justify-center bg-brand-white/10 rounded-full
                    group-hover:bg-brand-white/20 transition-colors">
          <svg class="w-6 h-6 text-brand-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="flex-1">
          <span class="block font-display uppercase tracking-wide text-brand-white">
            Ver Precios
          </span>
          <span class="text-sm text-brand-white/60">
            Consulta nuestros servicios
          </span>
        </div>
        <svg class="w-5 h-5 text-brand-white/40 group-hover:text-brand-white transition-colors" 
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</div>

{/* 
  ================================================================================
  SECCIÓN PREPARADA PARA CHATBOT DE RESERVAS
  ================================================================================
  
  Para integrar un agente/chatbot de reservas:
  
  1. Crear un archivo: src/components/Chatbot.astro
  2. Añadir contenedor: <div id="chatbot-container" class="fixed bottom-24 right-6 z-40 w-80 h-96 hidden">
  3. Configurar en src/config/chatbot.config.ts:
     - apiEndpoint: URL de la API del chatbot
     - apiKey: Clave de autenticación (usar env vars)
     - businessId: 'galan-barbers'
     - theme: { primaryColor, accentColor, backgroundColor, textColor }
     - events: { onOpen, onClose, onBookingConfirmed, onError }
  4. Importar y montar el componente en index.astro
  
  ================================================================================
*/}

<style>
  #floating-cta.visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  #booking-modal.open #booking-backdrop {
    opacity: 1;
  }
  
  #booking-modal.open #booking-content {
    transform: translateY(0);
  }
  
  @media (min-width: 768px) {
    #booking-modal.open #booking-content {
      transform: translate(-50%, -50%) scale(1);
      opacity: 1;
    }
  }
</style>

<script>
  // Booking modal functionality
  const bookingModal = document.getElementById('booking-modal');
  const bookingBackdrop = document.getElementById('booking-backdrop');
  const bookingContent = document.getElementById('booking-content');
  const bookingClose = document.getElementById('booking-close');
  const bookingPrices = document.getElementById('booking-prices');
  const floatingCta = document.getElementById('floating-cta');
  
  // Todos los botones que abren el modal
  const openBookingBtns = document.querySelectorAll('[data-open-booking]');
  
  function openBookingModal() {
    if (!bookingModal) return;
    
    bookingModal.classList.remove('hidden');
    // Pequeño delay para la animación
    requestAnimationFrame(() => {
      bookingModal.classList.add('open');
    });
    document.body.style.overflow = 'hidden';
  }
  
  function closeBookingModal() {
    if (!bookingModal) return;
    
    bookingModal.classList.remove('open');
    setTimeout(() => {
      bookingModal.classList.add('hidden');
    }, 300);
    document.body.style.overflow = '';
  }
  
  // Event listeners
  openBookingBtns.forEach(btn => {
    btn.addEventListener('click', openBookingModal);
  });
  
  bookingClose?.addEventListener('click', closeBookingModal);
  bookingBackdrop?.addEventListener('click', closeBookingModal);
  
  // Cerrar al hacer click en "Ver precios"
  bookingPrices?.addEventListener('click', () => {
    closeBookingModal();
  });
  
  // Cerrar con Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && bookingModal?.classList.contains('open')) {
      closeBookingModal();
    }
  });
  
  // Mostrar botón flotante después de hacer scroll
  let lastScrollY = window.scrollY;
  const showFloatingAfter = 300;
  
  function handleScroll() {
    const currentScrollY = window.scrollY;
    
    if (currentScrollY > showFloatingAfter) {
      floatingCta?.classList.add('visible');
    } else {
      floatingCta?.classList.remove('visible');
    }
    
    lastScrollY = currentScrollY;
  }
  
  window.addEventListener('scroll', handleScroll, { passive: true });
  
  // Check inicial
  handleScroll();
</script>
