---
import { siteConfig } from '../config/site.config';
---

<section id="contacto" class="py-20 md:py-32 bg-brand-dark relative">
  <!-- Gradient superior -->
  <div class="absolute top-0 left-0 w-full h-32 bg-gradient-to-b from-brand-black to-transparent"></div>
  
  <div class="container-custom relative z-10">
    <!-- Header de sección -->
    <div class="text-center mb-12 md:mb-16 reveal">
      <span class="inline-block text-brand-accent uppercase tracking-widest text-sm mb-4 translatable" data-es="Visítanos" data-ca="Visita'ns">
        Visítanos
      </span>
      <h2 class="heading-display text-3xl sm:text-4xl md:text-5xl text-brand-white mb-4 translatable" data-es="Dónde Estamos" data-ca="On Estem">
        Dónde Estamos
      </h2>
      <div class="accent-line mx-auto"></div>
    </div>
    
    <div class="max-w-4xl mx-auto">
      <!-- Grid de contacto -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mb-10">
        
        <!-- Dirección -->
        <div class="card-glass p-6 md:p-8 reveal">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center bg-brand-accent/10 rounded-sm">
              <svg class="w-6 h-6 text-brand-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            
            <div>
              <h3 class="font-display text-lg uppercase tracking-wide text-brand-white mb-2 translatable" data-es="Dirección" data-ca="Adreça">
                Dirección
              </h3>
              <address class="font-body text-brand-white/70 not-italic leading-relaxed">
                {siteConfig.contact.address}<br />
                {siteConfig.contact.postalCode} {siteConfig.contact.city}<br />
                {siteConfig.contact.province}
              </address>
              
              <a 
                href={siteConfig.contact.mapsUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 mt-4 text-brand-accent hover:text-brand-accent-light 
                       transition-colors text-sm font-medium"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
                <span class="translatable" data-es="Cómo llegar" data-ca="Com arribar">Cómo llegar</span>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Teléfono -->
        <div class="card-glass p-6 md:p-8 reveal">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center bg-brand-accent/10 rounded-sm">
              <svg class="w-6 h-6 text-brand-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            
            <div>
              <h3 class="font-display text-lg uppercase tracking-wide text-brand-white mb-2 translatable" data-es="Teléfono" data-ca="Telèfon">
                Teléfono
              </h3>
              <a 
                href={`tel:${siteConfig.contact.phoneTel}`}
                class="font-body text-xl text-brand-accent-light hover:text-brand-accent 
                       transition-colors"
              >
                {siteConfig.contact.phone}
              </a>
              
              <div class="flex flex-wrap gap-3 mt-4">
                <a 
                  href={`tel:${siteConfig.contact.phoneTel}`}
                  class="inline-flex items-center gap-2 px-4 py-2 bg-brand-white/10 rounded-sm
                         text-brand-white text-sm hover:bg-brand-accent hover:text-brand-white 
                         transition-all duration-300"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <span class="translatable" data-es="Llamar" data-ca="Trucar">Llamar</span>
                </a>
                
                <a 
                  href={`https://wa.me/${siteConfig.contact.phoneClean}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-[#25D366]/20 rounded-sm
                         text-[#25D366] text-sm hover:bg-[#25D366] hover:text-brand-white 
                         transition-all duration-300"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                  WhatsApp
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Instagram destacado -->
      <div class="card-glass p-6 md:p-8 text-center reveal">
        <div class="flex flex-col items-center gap-4">
          <div class="w-16 h-16 flex items-center justify-center bg-gradient-to-br from-brand-accent to-brand-accent-light rounded-full">
            <svg class="w-8 h-8 text-brand-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </div>
          
          <div>
            <h3 class="font-display text-xl uppercase tracking-wide text-brand-white mb-1 translatable" data-es="Síguenos" data-ca="Segueix-nos">
              Síguenos
            </h3>
            <p class="text-brand-white/60 text-sm mb-4 translatable" data-es="Descubre nuestros últimos trabajos" data-ca="Descobreix els nostres últims treballs">
              Descubre nuestros últimos trabajos
            </p>
          </div>
          
          <a 
            href={siteConfig.social.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary"
          >
            {siteConfig.social.instagramHandle}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
