---
import { siteConfig } from '../config/site.config';

const currentYear = new Date().getFullYear();

const footerLinks = [
  { labelEs: 'Servicios', labelCa: 'Serveis', href: '#servicios' },
  { labelEs: 'Equipo', labelCa: 'Equip', href: '#equipo' },
  { labelEs: 'Trabajos', labelCa: 'Treballs', href: '#trabajos' },
  { labelEs: 'Contacto', labelCa: 'Contacte', href: '#contacto' },
];
---

<footer class="bg-brand-black border-t border-brand-white/10 py-12 md:py-16">
  <div class="container-custom">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 mb-10">
      
      <!-- Logo y descripción -->
      <div class="md:col-span-1">
        <a href="#" class="inline-block mb-4">
          <img 
            src={siteConfig.images.logo.footer}
            alt={siteConfig.name}
            class="h-16 w-auto object-contain"
            loading="lazy"
          />
        </a>
        <p class="font-body text-brand-white/60 text-sm leading-relaxed max-w-xs">
          {siteConfig.tagline}
        </p>
      </div>
      
      <!-- Enlaces -->
      <div>
        <h4 class="font-display text-sm uppercase tracking-widest text-brand-white mb-4 translatable" data-es="Navegación" data-ca="Navegació">
          Navegación
        </h4>
        <ul class="space-y-2">
          {footerLinks.map((link) => (
            <li>
              <a 
                href={link.href}
                class="footer-link font-body text-brand-white/60 hover:text-brand-accent transition-colors text-sm"
                data-label-es={link.labelEs}
                data-label-ca={link.labelCa}
              >
                {link.labelEs}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contacto -->
      <div>
        <h4 class="font-display text-sm uppercase tracking-widest text-brand-white mb-4 translatable" data-es="Contacto" data-ca="Contacte">
          Contacto
        </h4>
        <ul class="space-y-2">
          <li>
            <a 
              href={`tel:${siteConfig.contact.phoneTel}`}
              class="font-body text-brand-white/60 hover:text-brand-accent transition-colors text-sm"
            >
              {siteConfig.contact.phone}
            </a>
          </li>
          <li>
            <span class="font-body text-brand-white/60 text-sm">
              {siteConfig.contact.city}
            </span>
          </li>
          <li>
            <a 
              href={siteConfig.social.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="font-body text-brand-white/60 hover:text-brand-accent transition-colors text-sm inline-flex items-center gap-1"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
              {siteConfig.social.instagramHandle}
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Separador -->
    <div class="border-t border-brand-white/10 pt-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="font-body text-brand-white/40 text-xs">
          © {currentYear} {siteConfig.name}. <span class="translatable" data-es="Todos los derechos reservados." data-ca="Tots els drets reservats.">Todos los derechos reservados.</span>
        </p>
        
        <div class="flex items-center gap-6">
          <a 
            href="#"
            class="font-body text-brand-white/40 hover:text-brand-white/60 text-xs transition-colors translatable"
            data-es="Aviso legal"
            data-ca="Avís legal"
          >
            Aviso legal
          </a>
          <a 
            href="#"
            class="font-body text-brand-white/40 hover:text-brand-white/60 text-xs transition-colors translatable"
            data-es="Privacidad"
            data-ca="Privacitat"
          >
            Privacidad
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Listen for language changes
  window.addEventListener('languageChange', (e: CustomEvent) => {
    const lang = e.detail.lang as 'es' | 'ca';
    
    // Update footer links
    document.querySelectorAll('.footer-link').forEach(link => {
      const labelEs = link.getAttribute('data-label-es');
      const labelCa = link.getAttribute('data-label-ca');
      if (labelEs && labelCa) {
        link.textContent = lang === 'es' ? labelEs : labelCa;
      }
    });
  });
</script>
